{
    "compilerOptions": {
        // esm modules
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "moduleDetection": "force",
        "target": "esnext",

        // handle js files with jsdoc
        "allowJs": true,
        "checkJs": true,
        
        // understand esnext and dom
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],

        "isolatedModules": true,
        "strict": true,
        "useDefineForClassFields": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
    },
    "exclude": ["**/dist/**"]
}
  