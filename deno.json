{
    "compilerOptions": {
        "lib": [
            "dom",
            "esnext",
            "deno.ns",
            "deno.unstable",
            "dom.iterable",
            "dom.asynciterable"
        ],
        "jsxImportSource": "preact",
        "jsx": "react-jsx"
    },
    "fmt": {
        "lineWidth": 120,
        "indentWidth": 4,
        "proseWrap": "preserve"
    },
    "lint": {
        "exclude": [
            "example/",
            "test/",
            "src/**/*.script.min.js"
        ]
    },
    "importMap": "./import_map.json",
    "tasks": {
        "compile:livereload": "deno run -A tasks/compileLivereload.ts",
        "test": "deno run -A tasks/test.ts"
    }
}
