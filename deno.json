{
    "compilerOptions": {
        "lib": [
            "dom",
            "esnext",
            "deno.ns",
            "deno.unstable",
            "dom.iterable",
            "dom.asynciterable"
        ]
    },
    "fmt": {
        "files": {
            "exclude": [
                "doc/dist",
                "exemples/preact/dist",
                "exemples/svelte/dist"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 100,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "lint": {
        "files": {
            "exclude": [
                "doc/dist",
                "exemples/preact/dist",
                "exemples/svelte/dist"
            ]
        }
    },
    "importMap": "./import_map.json",
    "tasks": {
        "test:unit": "deno test --allow-all --unstable --coverage=tests/cov_profile/unit --parallel --shuffle test/unit",
        "test:unit:snapshot": "deno test --allow-all --unstable test/unit -- --update",
        "test:integration": "deno test --allow-all --unstable --coverage=tests/cov_profile/integration --parallel --shuffle test/integration",
        "test:integration:snapshot": "deno test --allow-all --unstable test/integration --  --update",
        "test:snapshot": "deno task test:unit:snapshot && deno task test:integration:snapshot",
        "test": "deno task test:unit && deno task test:integration",
        "cache": "deno cache --reload"
    }
}
