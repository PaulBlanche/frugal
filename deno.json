{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext",
      "deno.ns",
      "deno.unstable",
      "dom.iterable",
      "dom.asynciterable"
    ]
  },
  "fmt": {
    "files": {
      "exclude": [
        "doc/dist",
        "exemples/preact/dist",
        "exemples/svelte/dist"
      ]
    },
    "options": {
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "exclude": [
        "doc/dist",
        "exemples/preact/dist",
        "exemples/svelte/dist"
      ]
    }
  },
  "importMap": "./import_map.json",
  "tasks": {
    "test:unit": "deno test -A --unstable --coverage=test/cov_profile/unit --parallel --shuffle test/unit",
    "test:unit:snapshot": "deno test -A --unstable test/unit -- --update",
    "test:integration": "deno test -A --unstable --coverage=test/cov_profile/integration --shuffle test/integration",
    "test:integration:snapshot": "deno test -A --unstable test/integration --  --update",
    "test:snapshot": "deno task test:unit:snapshot && deno task test:integration:snapshot",
    "test": "deno task test:unit && deno task test:integration",
    "cache": "deno cache --reload dep/mod.ts",
    "coverage:unit": "deno coverage test/cov_profile/unit --lcov --include=frugal/src --output=test/cov_profile/unit/cov_profile.lcov",
    "coverage:integration": "deno coverage test/cov_profile/integration --lcov --include=frugal/src --output=test/cov_profile/integration/cov_profile.lcov",
    "coverage": "deno task coverage:unit && deno task coverage:integration",
    "init": "deno run -A cli.ts init"
  }
}
